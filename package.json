{
  "name": "bulma-components",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Bulma-Css.com",
  "description": "Open-Source Components Library for Bulma",
  "scripts": {
    "start": "npm-run-all build --parallel watch-templates watch-css browsersync",
    "deploy": "node deploy",
    "browsersync": "browser-sync start --directory --server ./public --files ./public/* --startPath index.html",
    "clean": "rimraf public/*",
    "copy-assets": "cpx \"src/assets/**/*.*\" public/",
    "css-compile": "node-sass --importer=node_modules/node-sass-tilde-importer/ --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/bulma-theme.scss public/css/bulma/bulma-theme.css",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output public/css/bulma/bulma-theme.min.css public/css/bulma/bulma-theme.css",
    "css": "npm-run-all --sequential css-*",
    "templates": "pug --pretty -o public/ src/",
    "build": "npm-run-all --sequential clean copy-* templates css",
    "watch": "npm-run-all build --parallel watch-templates watch-css browsersync",
    "watch-templates": "npm run templates -- --watch",
    "watch-css": "npm run css-compile -- --watch"
  },
  "dependencies": {
    "bulma": "^0.7.5",
    "ftp-deploy": "^2.3.3",
    "node-sass-tilde-importer": "^1.0.2"
  },
  "devDependencies": {
    "browser-sync": "^2.24.7",
    "clean-css-cli": "^4.2.1",
    "cpx": "^1.5.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2"
  }
}
